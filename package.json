{
	"name": "monaco-playground",
	"version": "1.0.0",
	"description": "",
	"scripts": {
		"clean": "rm -rf wwwroot/dist wwwroot/languages wwwroot/lib/monaco",
		"buildrules": "tsc -p src/rules/tsconfig.json",
		"watchrules": "npm run buildrules -- --watch",
		"copyconfigs": "cd src && rsync -R languages/**/*.json ../wwwroot && cd -",
		"copymonaco": "rsync -a node_modules/monaco-editor/ wwwroot/lib/monaco",
		"prebuild": "npm run copyconfigs && npm run copymonaco",
		"build": "npm run buildrules && rollup -c",
		"dev": "npm run prebuild && npm run buildrules && rollup -c -w",
		"serve": "http-server -c-1 wwwroot"
	},
	"keywords": [],
	"author": "",
	"license": "MIT",
	"devDependencies": {
		"@types/eslint": "^6.1.3",
		"@types/node": "^12.12.5",
		"http-server": "^0.11.1",
		"monaco-editor": "^0.18.1",
		"rollup": "^1.26.3",
		"rollup-plugin-terser": "^5.1.2",
		"rollup-plugin-typescript": "^1.0.1",
		"tslib": "^1.10.0",
		"typescript": "^3.8.0-dev.20191102"
	}
}
