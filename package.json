{
	"name": "monaco-playground",
	"version": "1.0.0",
	"description": "",
	"type": "module",
	"scripts": {
		"clean": "rm -rf wwwroot/dist wwwroot/languages wwwroot/lib wwwroot/worker",
		"copyconfigs": "cd src && rsync -R languages/**/*.json ../wwwroot && cd -",
		"copymonaco": "mkdir -p wwwroot/lib && rsync -a node_modules/monaco-editor/ wwwroot/lib/monaco",
		"prebuild": "npm run copyconfigs && npm run copymonaco",
		"build": "rollup -c",
		"dev": "npm run prebuild && rollup -c -w",
		"serve": "http-server -c-1 wwwroot"
	},
	"keywords": [],
	"author": "",
	"license": "MIT",
	"devDependencies": {
		"@rollup/plugin-typescript": "^3.0.0",
		"@types/eslint": "^6.1.8",
		"http-server": "^0.12.1",
		"monaco-editor": "^0.20.0",
		"rollup": "^1.31.1",
		"rollup-plugin-terser": "^5.2.0",
		"tslib": "^1.11.0",
		"typescript": "^3.8.3"
	}
}
