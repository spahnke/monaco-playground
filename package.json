{
	"name": "monaco-playground",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"directories": {
		"lib": "lib"
	},
	"scripts": {
		"clean": "rm -rf MonacoPlayground/wwwroot/dist",
		"buildsrc": "tsc -p MonacoPlayground/src/tsconfig.json",
		"buildrules": "tsc -p MonacoPlayground/src/rules/tsconfig.json",
		"watchrules": "npm run buildrules -- --watch",
		"copyassets": "pushd MonacoPlayground/src && rsync -R languages/**/*.json ../wwwroot/dist && popd",
		"prebuild": "npm run clean",
		"build": "npm run buildsrc",
		"postbuild": "npm run copyassets && npm run buildrules",
		"watch": "npm run build && npm run buildsrc -- --watch"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@types/eslint": "^6.1.3",
		"typescript": "^3.8.0-dev.20191026"
	}
}