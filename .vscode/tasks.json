{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"type": "npm",
			"script": "dev",
			"isBackground": true,
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "silent",
				"revealProblems": "onProblem"
			},
			"problemMatcher": {
				"source": "rollup",
				"applyTo": "allDocuments",
				"pattern":[
					{
						//(!) Plugin typescript: @rollup/plugin-typescript TS1005: ';' expected.
						"regexp": "^\\(!\\).*TS(\\d+):\\s*(.*)$",
						"code": 1,
						"message": 2,
					},
					{
						//src/code-editor.ts: (46:26)
						"regexp": "^([^\\s].*):\\s*\\((\\d+):(\\d+)\\)$",
						"file": 1,
						"line": 2,
						"column": 3
					}
				],
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^rollup",
					"endsPattern": "waiting for changes\\.\\.\\.$|^\\[!\\]"
				}
			}
		},
		{
			"label": "serve",
			"type": "npm",
			"script": "serve",
			"isBackground": true,
			"presentation": {
				"reveal": "silent"
			},
			"problemMatcher": {
				"pattern": {
					"regexp": "_____________________"
				},
				"background": {
					"beginsPattern": "^Starting up",
					"endsPattern": "^Available on"
				}
			}
		}
	]
}