{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"type": "npm",
			"script": "dev",
			"isBackground": true,
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "silent",
				"revealProblems": "onProblem"
			},
			"problemMatcher": [
				{
					"source": "rollup",
					"pattern": [
						{
							// [!] Error: 'import' and 'export' may only appear at the top level (Note that you need plugins to import files that are not JavaScript)
							"regexp": "^\\[!\\]\\s*Error:\\s*(.*)$",
							"message": 1
						},
						{
							// src/contrib/todo-contribution.ts (3:14)
							"regexp": "^([^\\s]*)\\s*\\((\\d+):(\\d+)\\)",
							"file": 1,
							"line": 2,
							"column": 3
						}
					],
					"background": {
						"activeOnStart": true,
						"beginsPattern": "^rollup",
						"endsPattern": "waiting for changes\\.\\.\\.$|^Error:"
					}
				},
				{
					"source": "rollup",
					"severity": "warning",
					"pattern": [
						{
							// (!) Circular dependency
							"regexp": "^\\(!\\)\\s*(.*)$",
							"message": 1
						},
						{
							// src/languages/javascript/javascript-extensions.ts -> src/monaco-loader.ts -> src/languages/language-registry.ts -> src/languages/javascript/javascript-extensions.ts
							"regexp": "^(([^\\s]*)(\\s*)->(\\s*).*)",
							"message": 1,
							"file": 2,
							"line": 3,
							"column": 4,
						}
					],
					// needs to be repeated unfortunately, otherwise the problems are not cleared when they are solved
					"background": {
						"beginsPattern": "^rollup",
						"endsPattern": "waiting for changes\\.\\.\\.$|^Error:"
					}
				},
				{
					"source": "rollup",
					"severity": "warning",
					"pattern": [
						{
							// (!) Plugin typescript: @rollup/plugin-typescript TS1005: ',' expected.
							"regexp": "^\\(!\\)\\s*(.*)$",
							"message": 1
						},
						{
							// src/languages/javascript/javascript-extensions.ts: (21:3)
							"regexp": "^([^\\s]*?):?\\s*\\((\\d+):(\\d+)\\)$",
							"file": 1,
							"line": 2,
							"column": 3,
						}
					],
					// needs to be repeated unfortunately, otherwise the problems are not cleared when they are solved
					"background": {
						"beginsPattern": "^rollup",
						"endsPattern": "waiting for changes\\.\\.\\.$|^Error:"
					}
				},
			]
		},
		{
			"label": "build tests",
			"type": "typescript",
			"tsconfig": "test/tsconfig.json",
			"option": "watch",
			"group": "build",
			"presentation": {
				"reveal": "silent",
				"revealProblems": "onProblem"
			},
			"problemMatcher": [
				"$tsc-watch"
			],
		},
		{
			"label": "serve",
			"type": "npm",
			"script": "serve",
			"isBackground": true,
			"presentation": {
				"reveal": "silent"
			},
			"problemMatcher": {
				"pattern": {
					// dummy regexp because it's mandatory but we only care about the background pattern
					"regexp": ""
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": "@@@@@@@@", // impossible pattern
					"endsPattern": "Available on:"
				}
			}
		}
	]
}