{
    "version": "2.0.0",
    "tasks": [
		{
			"label": "build",
			"command": "dotnet",
			"type": "process",
			"args": [
				"build",
				"${workspaceFolder}/MonacoPlayground/MonacoPlayground.csproj"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"type": "npm",
			"script": "watch",
			"path": "MonacoPlayground/src/",
			"problemMatcher": [
				"$tsc-watch"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "typescript",
			"label": "ESLint rules",
			"tsconfig": "rules/tsconfig.json",
			"option": "watch",
			"problemMatcher": [
				"$tsc-watch"
			],
		}
	]
}
