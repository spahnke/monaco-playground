{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"type": "npm",
			"script": "dev",
			"isBackground": true,
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "silent",
				"revealProblems": "onProblem"
			},
			"problemMatcher": {
				"pattern": {
					// dummy regexp because it's mandatory but we only care about the background pattern
					"regexp": ""
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^rollup",
					"endsPattern": "waiting for changes\\.\\.\\.$|^\\[!\\]"
				}
			}
		},
		{
			"label": "serve",
			"type": "npm",
			"script": "serve",
			"isBackground": true,
			"presentation": {
				"reveal": "silent"
			},
			"problemMatcher": {
				"pattern": {
					// dummy regexp because it's mandatory but we only care about the background pattern
					"regexp": ""
				},
				"background": {
					"beginsPattern": "^Starting up",
					"endsPattern": "^Available on"
				}
			}
		}
	]
}