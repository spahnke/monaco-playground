{
	"$schema": "https://schemastore.azurewebsites.net/schemas/json/eslintrc.json",
	"parserOptions": {
		"ecmaVersion": 2021,
		"ecmaFeatures": { "globalReturn": true }
	},
	"rules": {
		"curly": "warn",
		"eqeqeq": "warn",
		"init-declarations": "info",
		"no-id-tostring-in-query": "warn",
		"no-unused-vars": "hint",
		"no-var": "info",
		"prefer-const": "info",
		"quotes": [
			"info",
			"double",
			{
				"allowTemplateLiterals": true,
				"avoidEscape": true
			}
		],
		"semi": "info"
	}
}
