{
	"$schema": "https://schemastore.azurewebsites.net/schemas/json/eslintrc.json",
	"parserOptions": {
		"ecmaVersion": "latest",
		"ecmaFeatures": { "globalReturn": true }
	},
	"rules": {
		"for-direction": "warn",
		"no-cond-assign": "warn",
		"no-constant-condition": ["warn", { "checkLoops": false }],
		"no-control-regex": "warn",
		"no-debugger": "warn",
		"no-dupe-else-if": "warn",
		"no-duplicate-case": "warn",
		"no-empty": "warn",
		"no-empty-character-class": "warn",
		"no-ex-assign": "error",
		"no-extra-boolean-cast": "warn",
		"no-extra-parens": ["info", "all", { "conditionalAssign": false, "returnAssign": false, "nestedBinaryExpressions": false }],
		"no-extra-semi": "warn",
		"no-invalid-regexp": "error",
		"no-irregular-whitespace": ["warn", { "skipTemplates": true }],
		"no-loss-of-precision": "warn",
		"no-misleading-character-class": "warn",
		"no-regex-spaces": "warn",
		"no-sparse-arrays": "warn",
		"no-template-curly-in-string": "warn",
		"no-unreachable-loop": "warn",
		"no-unsafe-finally":  "warn",
		"no-unsafe-negation": "warn",
		"no-unsafe-optional-chaining": ["warn", { "disallowArithmeticOperators": true }],
		"no-useless-backreference": "warn",
		"require-atomic-updates": "warn",
		"use-isnan": "warn",

		"accessor-pairs": "warn",
		"array-callback-return": "warn",
		"block-scoped-var": "warn",
		"consistent-return": "warn",
		"curly": ["info", "multi-or-nest", "consistent"],
		"default-case": "warn",
		"default-case-last": "info",
		"default-param-last": "info",
		"dot-notation": "hint",
		"eqeqeq": ["warn", "smart"],
		"guard-for-in": "warn",
		"no-alert": "warn",
		"no-caller": "error",
		"no-constructor-return": "warn",
		"no-div-regex": "info",
		"no-else-return": "info",
		"no-empty-pattern": "warn",
		"no-eval": "error",
		"no-extend-native": "warn",
		"no-extra-bind": "warn",
		"no-fallthrough": "warn",
		"no-labels": "warn",
		"no-implicit-coercion": ["warn", { "boolean": true, "number": true, "string": true }],
		"no-invalid-this": "warn",
		"no-new-func": "error",
		"no-new-wrappers": "warn",
		"no-nonoctal-decimal-escape": "warn",
		"no-octal-escape": "warn",
		"no-param-reassign": "hint",
		"no-proto": "warn",
		"no-redeclare": "warn",
		"no-return-assign": "warn",
		"no-self-assign": "warn",
		"no-self-compare": "warn",
		"no-throw-literal": "warn",
		"no-unmodified-loop-condition": "warn",
		"no-unused-expressions": ["hint", { "allowShortCircuit": true, "allowTernary": true, "allowTaggedTemplates": true }],
		"no-useless-call": "warn",
		"no-useless-catch": "info",
		"no-useless-escape": "warn",
		"no-useless-return": "info",
		"no-void": "warn",
		"prefer-named-capture-group": "hint",
		"prefer-regex-literals": ["info", { "disallowRedundantWrapping": true }],
		"radix": ["warn", "as-needed"],
		"yoda": ["info", "never", { "exceptRange": true }],

		"no-shadow": "info",
		"no-unused-vars": "hint",

		"func-style": ["info", "declaration", { "allowArrowFunctions": true }],
		"lines-between-class-members": "info",
		"new-parens": "warn",
		"no-array-constructor": "warn",
		"no-bitwise": "warn",
		"no-new-object": "warn",
		"no-trailing-spaces": "off",
		"no-unneeded-ternary": "info",
		"operator-assignment": "hint",
		"prefer-exponentiation-operator": "info",
		"prefer-object-spread": "hint",
		"quotes": ["info", "double", { "avoidEscape": true, "allowTemplateLiterals": true }],
		"semi": "info",

		"arrow-parens": ["hint", "as-needed"],
		"no-useless-computed-key": ["info", { "enforceForClassMembers": true }],
		"no-var": "hint",
		"object-shorthand": "hint",
		"prefer-arrow-callback": "hint",
		"prefer-const": "hint",
		"prefer-destructuring": "hint",
		"prefer-numeric-literals": "info",
		"prefer-rest-params": "hint",
		"prefer-spread": "hint",
		"prefer-template": "hint",

		"no-id-tostring-in-query": "warn"
	},
	"ruleFiles": [
		"/rules/no-id-tostring-in-query.js"
	]
}
